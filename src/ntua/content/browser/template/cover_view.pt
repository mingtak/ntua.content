            <div class="kf_courses_detail_des">
<!--              <div class="course_heading">
                <h3 tal:content="folder/title">標題</h3>
              </div>
-->
              <ul tal:define="news python:folder['news'].getChildNodes()">
                <li tal:repeat="item news" tal:content="structure item/text/output" />
              </ul>
            </div>
           <!-- COURSES DETAIL DES END -->
          </div>
</tal:notice>
         </div>
       </div>
       <!-- COURSES DETAIL TABS WRAP END -->

            </div>
