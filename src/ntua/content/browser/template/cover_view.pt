            <div class="kf_courses_detail_des">
<!--              <div class="course_heading">
                <h3>公告總覽</h3>
              </div>
-->
              <ul tal:define="news python:api.content.find(Type='News Item', sort_on='created', sort_order='reverse')">
                <li tal:repeat="item news" tal:content="structure python:item.getObject().text.output" />
              </ul>
            </div>
           <!-- COURSES DETAIL DES END -->
          </div>

<tal:notice define="folders python:[portal['folder_2'], portal['folder_3'], portal['folder_4'], portal['folder_5'], portal['folder_6']]"
            repeat="folder folders">
          <div role="tabpanel" class="tab-pane" id="folder_2" tal:attributes="id folder/id">
